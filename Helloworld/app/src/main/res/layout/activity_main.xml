<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/samy1"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/mytextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/purple_500"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:padding="20dp"
        android:text="Hello my friends"
        android:textAllCaps="true"
        android:textColor="#34EE00"
        android:textSize="30dp"


        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/myedittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:textSize="20dp"
        android:hint="Enter your name "
        android:textColorHint="#61102C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="71dp"
        android:clickable="true"
        android:paddingTop="0dp"
        android:text="Envoyer"
        app:layout_constraintStart_toStartOf="@+id/myedittext"
        app:layout_constraintTop_toBottomOf="@+id/myedittext" />
    <!--
        <ImageView
            android:id="@+id/myimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="this is my brother"
            android:scaleType="centerCrop"
            android:src="@drawable/samy"
            app:layout_constraintTop_toBottomOf="@+id/mybtn"


            tools:layout_editor_absoluteX="0dp" />-->
</androidx.constraintlayout.widget.ConstraintLayout>